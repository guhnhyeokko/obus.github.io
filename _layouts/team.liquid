---
layout: page
---
{{ content }}

{% assign groups_order = 'Principal Investigator|Postdoctoral Researcher|PhD Student|Master Student|Researcher|Undergraduate Student' | split: '|' %}

<!-- Member Count Summary -->
<p class="mb-5">
  {% assign total_members = 0 %}
  {% assign populated_groups = '' | split: '|' %}

  {% for group in groups_order %}
    {% assign members_in_group = site.members | where: 'group', group %}
    {% if members_in_group.size > 0 %}
      {% assign total_members = total_members | plus: members_in_group.size %}
      {% if group != 'Principal Investigator' %}
        {% assign group_info = group | append: '##' | append: members_in_group.size %}
        {% assign populated_groups = populated_groups | push: group_info %}
      {% endif %}
    {% endif %}
  {% endfor %}

  Our team consists of {{ total_members }} members in total, including
  {% for item in populated_groups %}
    {% assign parts = item | split: '##' %}
    {% assign g_name = parts[0] %}
    {% assign g_count = parts[1] %}
    <a href="#{{ g_name | slugify }}" style="text-decoration: underline; color: inherit;">
      {{ g_count }}
      {{ g_name }}
    </a>
    {%- unless forloop.last %}, {% endunless %}
  {% endfor -%}
  .
</p>

{% for group in groups_order %}
  {% assign members_in_group = site.members | where: 'group', group | sort: 'lastname' %}
  {% if members_in_group.size > 0 %}
    <h2 id="{{ group | slugify }}" class="mt-5">{{ group }}</h2>
    <div class="row row-cols-1 row-cols-md-1 row-cols-lg-2 g-5 mb-5">
      {% for member in members_in_group %}
        <div class="col mb-4">
          <div class="d-flex gap-3 h-100">
            {% if member.profile.image %}
              <div class="flex-shrink-0">
                {% assign member_image_path = member.profile.image | prepend: 'assets/img/' %}
                {% if member.redirect %}
                  {% assign member_link = member.redirect | relative_url %}
                {% else %}
                  {% assign member_link = member.url | relative_url %}
                {% endif %}
                <a href="{{ member_link }}" class="d-block h-100">
                  <img
                    src="{{ member_image_path | relative_url }}"
                    alt="{{ member.profile.name }}"
                    class="rounded h-100"
                    style="width: 150px; object-fit: cover;"
                    loading="lazy"
                  >
                </a>
              </div>
            {% endif %}
            <div class="card flex-grow-1 hoverable h-100 d-flex flex-column">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">
                  {% if member.redirect %}
                    {% assign member_link = member.redirect | relative_url %}
                  {% else %}
                    {% assign member_link = member.url | relative_url %}
                  {% endif %}
                  <a href="{{ member_link }}">{{ member.profile.name }}</a>
                </h5>
                <p class="card-subtitle mb-2 text-muted">{{ member.profile.position }}</p>
                {% if member.description %}
                  <p class="card-text">{{ member.description }}</p>
                {% endif %}
                <div class="social-icons mt-auto pt-3">
                  {% if member.profile.email %}
                    <a href="mailto:{{ member.profile.email }}" title="Email"><i class="fa-solid fa-envelope"></i></a>
                  {% endif %}
                  {% if member.profile.orcid %}
                    <a href="https://orcid.org/{{ member.profile.orcid }}" target="_blank" rel="noopener noreferrer" title="ORCID"
                      ><i class="ai ai-orcid"></i
                    ></a>
                  {% endif %}
                  {% if member.profile.linkedin %}
                    <a href="https://www.linkedin.com/in/{{ member.profile.linkedin }}" target="_blank" rel="noopener noreferrer" title="LinkedIn"
                      ><i class="fa-brands fa-linkedin"></i
                    ></a>
                  {% endif %}
                  {% if member.profile.scholar_userid %}
                    {% if member.profile.scholar_userid contains 'http' %}
                      <a
                        href="{{ member.profile.scholar_userid }}"
                        target="_blank"
                        rel="noopener noreferrer"
                        title="Google Scholar"
                        ><i class="ai ai-google-scholar"></i
                      ></a>
                    {% elsif member.profile.scholar_userid contains ':' %}
                      {% assign scholar_parts = member.profile.scholar_userid | split: ':' %}
                      <a
                        href="https://scholar.google.com/citations?view_op=view_citation&hl=en&user={{ scholar_parts[0] }}&sortby=pubdate&citation_for_view={{ member.profile.scholar_userid }}"
                        target="_blank"
                        rel="noopener noreferrer"
                        title="Google Scholar"
                        ><i class="ai ai-google-scholar"></i
                      ></a>
                    {% else %}
                      <a
                        href="https://scholar.google.com/citations?user={{ member.profile.scholar_userid }}"
                        target="_blank"
                        rel="noopener noreferrer"
                        title="Google Scholar"
                        ><i class="ai ai-google-scholar"></i
                      ></a>
                    {% endif %}
                  {% endif %}
                  {% if member.profile.research_gate %}
                    <a
                      href="https://www.researchgate.net/profile/{{ member.profile.research_gate }}"
                      target="_blank"
                      rel="noopener noreferrer"
                      title="ResearchGate"
                      ><i class="ai ai-researchgate"></i
                    ></a>
                  {% endif %}
                  {% if member.profile.github %}
                    <a href="https://github.com/{{ member.profile.github }}" target="_blank" rel="noopener noreferrer" title="GitHub"
                      ><i class="fa-brands fa-github"></i
                    ></a>
                  {% endif %}
                  {% if member.profile.website %}
                    <a href="{{ member.profile.website }}" target="_blank" rel="noopener noreferrer" title="Website"
                      ><i class="fa-solid fa-globe"></i
                    ></a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
{% endfor %}

<!-- Alumni Section -->
{% if site.data.alumni %}
  <h2 id="alumni" class="mt-5">Alumni</h2>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Role / Affiliation</th>
          <th scope="col">Email</th>
        </tr>
      </thead>
      <tbody>
        {% for alumnus in site.data.alumni %}
          <tr>
            <td>{{ alumnus.name }}</td>
            <td>
              {% if alumnus.role %}
                {{ alumnus.role }}
              {% else %}
                -
              {% endif %}
            </td>
            <td>
              {% if alumnus.email %}
                <a href="mailto:{{ alumnus.email }}">{{ alumnus.email }}</a>
              {% else %}
                -
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endif %}
