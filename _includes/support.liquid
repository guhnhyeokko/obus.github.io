<!-- _includes/support.liquid -->
<div class="col">
  <div class="card h-100 shadow-sm">
    <img
      src="/assets/img/support/{{ support.logo }}"
      class="card-img-top p-3"
      alt="{{ support.short_name }}"
      style="height: 150px; object-fit: contain; background-color: #f8f9fa;"
    >
    <div class="card-body d-flex flex-column">
      <h5
        class="card-title fw-bold mb-3"
        style="font-family: 'Georgia', 'Times New Roman', serif; font-size: clamp(0.7rem, 1.5vw, 0.9rem); line-height: 1.2; min-height: 2.4rem; display: flex; align-items: center;"
      >
        {{ support.title }}
      </h5>
      <ul
        class="list-unstyled mb-0 flex-grow-1"
        style="font-size: clamp(0.75rem, 1.5vw, 0.85rem); line-height: 1.6; color: #555; text-align: left; hyphens: auto;"
      >
        {% for project in support.projects %}
          <li class="mb-3">
            <strong style="color: #333; display: block; margin-bottom: 0.25rem;">{{ project.period }}</strong>
            <span style="display: block;">{{ project.title }}</span>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
